<script>
  // Récupérer les éléments HTML pertinents
  const startCheckbox = document.getElementById("startCheckbox");
  const startProgressBar = document.getElementById("startProgressBar");
  const finishCheckbox = document.getElementById("finishCheckbox");
  const finishProgressBar = document.getElementById("finishProgressBar");

  // Ajouter les gestionnaires d'événements aux cases à cocher
  startCheckbox.addEventListener("change", function () {
    if (startCheckbox.checked) {
      startProgressBar.classList.add("bg-danger");
    } else {
      startProgressBar.classList.remove("bg-danger");
    }
  });

  finishCheckbox.addEventListener("change", function () {
    if (finishCheckbox.checked) {
      finishProgressBar.classList.add("bg-success");
    } else {
      finishProgressBar.classList.remove("bg-success");
    }
  });
</script>
